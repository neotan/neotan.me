{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/icons/*": [
        "icons/*"
      ],
      "@/types": [
        "types/index"
      ],
      "@/utils/*": [
        "utils/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".next/types/**/*.ts",
    "app/_app.tsxs",
    "app/_document.tsxs",
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/blog/page.tsx",
    "app/show/page.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "icons/**/*.ts",
    "icons/**/*.tsx",
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
