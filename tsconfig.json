{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es5",
    "typeRoots": ["./types", "../node_modules/@types"],
    "types": ["node"],
    "paths": {
      "~/components/*": ["components/*"],
      "~/utils/*": ["utils/*"],
      "~/icons/*": ["icons/*"],
      "~/types": ["types/index"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "utils/helpers.ts"]
}
